[mysql]
default-character-set = {{ mysql_character_set_server }}

[mysqld]
# Basic Settings
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = {{ mysql_socket }}
port = {{ mysql_port }}
datadir = {{ mysql_datadir }}
tmpdir = {{ mysql_tmpdir }}
bind-address = {{ mysql_bind_address }}

# Character Set and Collation
character-set-server = {{ mysql_character_set_server }}
collation-server = {{ mysql_collation_server }}

# SQL Mode
sql_mode = {{ mysql_sql_mode }}

# Time Zone
default-time-zone = {{ mysql_default_time_zone }}

# Connection and Threading
max_connections = {{ mysql_max_connections }}
thread_cache_size = {{ mysql_thread_cache_size }}
thread_stack = {{ mysql_thread_stack }}

# Table and Key Settings
table_open_cache = {{ mysql_table_open_cache }}
table_definition_cache = {{ mysql_table_definition_cache }}
key_buffer_size = {{ mysql_key_buffer_size }}

# Network and Packet Settings
max_allowed_packet = {{ mysql_max_allowed_packet }}

# Buffer Settings
sort_buffer_size = {{ mysql_sort_buffer_size }}
read_buffer_size = {{ mysql_read_buffer_size }}
read_rnd_buffer_size = {{ mysql_read_rnd_buffer_size }}
myisam_sort_buffer_size = {{ mysql_myisam_sort_buffer_size }}

# Temporary Tables
tmp_table_size = {{ mysql_tmp_table_size }}
max_heap_table_size = {{ mysql_max_heap_table_size }}

# InnoDB Settings
innodb_buffer_pool_size = {{ mysql_innodb_buffer_pool_size }}
innodb_buffer_pool_instances = {{ mysql_innodb_buffer_pool_instances }}
innodb_log_file_size = {{ mysql_innodb_log_file_size }}
innodb_log_buffer_size = {{ mysql_innodb_log_buffer_size }}
innodb_flush_log_at_trx_commit = {{ mysql_innodb_flush_log_at_trx_commit }}
innodb_flush_method = {{ mysql_innodb_flush_method }}
innodb_file_per_table = {{ mysql_innodb_file_per_table }}
innodb_open_files = {{ mysql_innodb_open_files }}

# Logging
log_error = {{ mysql_log_error }}
slow_query_log = {{ mysql_slow_query_log }}
slow_query_log_file = {{ mysql_slow_query_log_file }}
long_query_time = {{ mysql_long_query_time }}

# Binary Logging
server-id = {{ mysql_server_id }}
log_bin = {{ mysql_log_bin }}
binlog_format = {{ mysql_binlog_format }}
expire_logs_days = {{ mysql_expire_logs_days }}
max_binlog_size = {{ mysql_max_binlog_size }}

# Security
local_infile = {{ mysql_local_infile }}
symbolic-links = {{ mysql_symbolic_links }}

# Magento specific optimizations
optimizer_switch = {{ mysql_optimizer_switch }}

# Disable MySQL 8.0+ features that may cause issues
disabled_storage_engines = "MyISAM,BLACKHOLE,FEDERATED,ARCHIVE,MEMORY"

# Authentication
default_authentication_plugin = mysql_native_password

[mysqldump]
quick
quote-names
max_allowed_packet = {{ mysql_max_allowed_packet }}

[mysql]
no-auto-rehash

[myisamchk]
key_buffer_size = {{ mysql_key_buffer_size }}
sort_buffer_size = {{ mysql_sort_buffer_size }}
read_buffer = {{ mysql_read_buffer_size }}
write_buffer = {{ mysql_read_buffer_size }}

[mysqlhotcopy]
interactive-timeout

[mysqld_safe]
log-error = {{ mysql_log_error }}
pid-file = /var/run/mysqld/mysqld.pid
